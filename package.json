{
  "name": "@julr/adonisjs-inngest",
  "description": "AdonisJS integration for Inngest workflows",
  "version": "1.0.0",
  "engines": {
    "node": ">=20.6.0"
  },
  "type": "module",
  "files": [
    "build",
    "!build/bin",
    "!build/tests"
  ],
  "exports": {
    "./types": "./build/src/types.js",
    "./inngest_provider": "./build/providers/inngest_provider.js",
    "./commands": "./build/commands/main.js",
    "./services/main": "./build/services/main.js",
    ".": "./build/index.js"
  },
  "scripts": {
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "prebuild": "npm run lint && npm run clean",
    "postbuild": "npm run copy:templates && npm run index:commands",
    "pretest": "npm run lint",
    "test": "c8 npm run quick:test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "precompile": "npm run lint",
    "compile": "tsc",
    "build": "npm run compile",
    "version": "npm run build",
    "index:commands": "adonis-kit index build/commands",
    "prepublishOnly": "npm run build",
    "release": "release-it",
    "quick:test": "node --import=@poppinss/ts-exec --enable-source-maps bin/test.ts"
  },
  "keywords": [
    "adonisjs",
    "inngest",
    "workflows"
  ],
  "author": "Julien Ripouteau <julien@ripouteau.com>",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/core": "^6.19.1",
    "@adonisjs/eslint-config": "2.0.0-beta.7",
    "@adonisjs/prettier-config": "^1.4.5",
    "@adonisjs/tsconfig": "^1.4.1",
    "@japa/assert": "^4.1.1",
    "@japa/runner": "^4.4.0",
    "@poppinss/ts-exec": "^1.4.1",
    "@release-it/conventional-changelog": "^10.0.2",
    "@swc/core": "^1.15.2",
    "@types/node": "^24.10.1",
    "@vinejs/vine": "^4.1.0",
    "c8": "^10.1.3",
    "copyfiles": "^2.4.1",
    "del-cli": "^7.0.0",
    "eslint": "^9.39.1",
    "inngest": "^3.45.1",
    "prettier": "^3.6.2",
    "release-it": "^19.0.6",
    "ts-node-maintained": "^10.9.6",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.2.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "release-it": {
    "git": {
      "requireCleanWorkingDir": true,
      "requireUpstream": true,
      "commitMessage": "chore(release): ${version}",
      "tagAnnotation": "v${version}",
      "push": true,
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true,
      "skipChecks": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "prettier": "@adonisjs/prettier-config"
}
